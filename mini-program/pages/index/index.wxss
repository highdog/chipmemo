/* pages/index/index.wxss */

/* 欢迎页面样式 */
.welcome-section {
  padding: 80rpx 40rpx;
  text-align: center;
}

.welcome-header {
  margin-bottom: 80rpx;
}

.welcome-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.welcome-features {
  margin-bottom: 80rpx;
}

.feature-item {
  margin-bottom: 60rpx;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.feature-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.welcome-actions {
  padding: 0 20rpx;
}

/* 仪表板样式 */
.dashboard {
  padding-bottom: 40rpx;
}

/* 用户卡片 */
.user-card {
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background-color: #f0f0f0;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.user-email {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.user-actions {
  margin-left: 20rpx;
}

.card-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 统计网格 */
.stats-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  flex: 1;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #007aff, #5ac8fa);
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-icon {
  font-size: 32rpx;
  opacity: 0.8;
}

/* 快捷操作 */
.quick-actions {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #007aff;
}

.action-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 0 20rpx;
}

.action-item {
  flex: 1;
  min-width: 140rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.action-label {
  font-size: 26rpx;
  color: #333;
}

/* 最近笔记 */
.recent-notes {
  margin-bottom: 40rpx;
}

.notes-list {
  padding: 0 20rpx;
}

.note-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.note-item:active {
  transform: scale(0.98);
}

.note-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.note-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.note-date {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.note-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.note-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-state-subtext {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .stats-grid {
    flex-direction: column;
  }
  
  .stat-card {
    margin-bottom: 20rpx;
  }
  
  .action-grid {
    justify-content: space-between;
  }
  
  .action-item {
    flex: 0 0 calc(50% - 10rpx);
    margin-bottom: 20rpx;
  }
}

/* 加载动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dashboard > view {
  animation: fadeIn 0.5s ease-out;
}

.note-item {
  animation: fadeIn 0.3s ease-out;
}

.action-item {
  animation: fadeIn 0.3s ease-out;
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .welcome-title {
    color: #fff;
  }
  
  .welcome-subtitle,
  .feature-desc {
    color: #ccc;
  }
  
  .feature-title,
  .section-title,
  .user-name,
  .note-title,
  .action-label {
    color: #fff;
  }
  
  .user-email,
  .note-content,
  .stat-label {
    color: #999;
  }
  
  .note-date {
    color: #666;
  }
}